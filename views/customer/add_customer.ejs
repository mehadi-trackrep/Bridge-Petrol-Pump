<!DOCTYPE html>

<html lang="en">
<% include ../common/head.ejs %>

<body>
    <% include ../common/sideBar.ejs %>
    <header id="header">
        <% include ../common/navBar.ejs %>
    </header>
    <div class="mui-container">
        <div class="mui-panel" style="margin-top: 72px; margin-left:10% ">
            <form class="mui-form" method="POST" action="/customer/insertInDb">
                <legend>Add Customer</legend>
                <div class="mui-textfield">
                    <input type="text" name="company_name" required placeholder="Company name" />
                </div>
                <div class="mui-textfield">
                    <input type="text" name="address" required placeholder="Address" />
                </div>
                <div class="mui-textfield">
                    <input type="text" name="email" required placeholder="Email" />
                </div>
                <div class="mui-textfield">
                    <input type="text" name="contact_person" required placeholder="Contact person name" />
                </div>
                <div class="mui-textfield">
                    <input type="text" name="contact_no" required placeholder="Contact" />
                </div>
                <button class="mui-btn mui-btn--primary mui-btn--raised" type="submit">
                    Confirm
                </button>
            </form>
        </div>
    </div>
    <footer id="footer" style="background-color: black;">
        <div class="mui-container-fluid">
            <br>
