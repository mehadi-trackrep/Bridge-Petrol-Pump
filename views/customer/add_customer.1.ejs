<!doctype html>

<html lang="en">

<head>
    <% include ../partials/head.ejs %>
</head>

<body>

    <div class="container-fluid">

        <!-- ### Submenu nici: https://www.bootply.com/fe4AfcEnKD -->

        <!--== Navigation Bar Start  ==-->
        <% include ../partials/navbar.ejs %>

        <!-- == Main body starts here == -->
        <% include ../partials/sidebar.ejs %>

        <div class="col-sm-6" style="margin-left: 260px;">
            <form method="POST" action="/customer/insertInDb">
                <center>
                    <h2>Add Customer</h2><br>

                    <div class="form-group" style="margin-top: 15px;">
                        <div class="col-sm-12">
                            <input class="form-control" name="company_name" type="value" placeholder="Company name"
                                required>
                        </div>
                    </div>

                    <div class="form-group" style="margin-top: 15px;">
                        <div class="col-sm-12">
                            <input class="form-control" name="address" type="value" placeholder="Address" required>
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <div class="col-sm-12">
                            <input class="form-control" name="email" type="value" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <div class="col-sm-12">
                            <input class="form-control" name="contact_person" type="value"
                                placeholder="Contact person name" required>
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <div class="col-sm-12">
                            <input class="form-control" name="contact_no" type="value" placeholder="Contact" required>
                        </div>
                    </div>

                    <div class="form-group" style="margin-top: 15px;">
                        <input class="btn" type="submit" value="Add Customer">
                    </div>

            </form>
            </center>
        </div>


    </div>
    <!-- ## All Script files ## -->
    <% include ../partials/all_scripts.ejs %>

</body>

</html>