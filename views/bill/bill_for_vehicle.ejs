        $('#vehicle-select').select2({
            ajax: {
                url: function (params) {
                    // alert("==>: " + '/ajax/get-vehicle?id=' + params.term);
                    console.log(params)
                    return '/ajax/get-vehicle?';
                },
                data: function (params) {
                    var query = {
